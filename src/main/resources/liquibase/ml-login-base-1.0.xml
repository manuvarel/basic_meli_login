<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="LiquiTest - Crear estructura Inicial - tabla _test"
	author="Manu Varela" context="base">
        <comment>Creation of _user table</comment>
        <createTable tableName="user">
            <column name="meli_user_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="acces_token" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="refresh_token" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>